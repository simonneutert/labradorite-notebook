<link rel="stylesheet" href="https://unpkg.com/tagin@2.0.2/dist/tagin.min.css">
<script src="https://unpkg.com/tagin@2.0.2/dist/tagin.min.js"></script>
<a href="<%= @current_path_memo %>">Back</a>
<hr>
<form name="memo" action="<%= @current_path_memo %>/update" method="POST">
  <h1>
    <input type="text" id="title" name="title" class="form-control" value="<%= @meta_ostruct.title %>">
  </h1>
  <hr>
  <div class="row">
    <div class="col">
      <input type="text" name="tags" class="form-control tagin" value="<%= @meta_ostruct.tags %>">
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col">
      <div style="height: 80vh; border: 1px solid green; overflow-y: scroll;">
        <%= @content -%>
      </div>
    </div>
    <div class="col" style="overflow-y: scroll;">
      <textarea name="content" id="content" style="width: 100%; height: 80vh;"><%= @content_md -%></textarea>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%# JS includes %>
<script src="/js/basic-tagin.js"></script>
