<style>
  md-block { white-space: pre; font-family: monospace; }
</style>
<div class="row">
  <div class="col">
    <a href="/memos" class="btn btn-primary">Overview</a>
  </div>
  <div class="col">
    <p class="text-end">
      <a href="<%= @current_path_memo %>/destroy" class="btn btn-danger">DELETE</a>
    </p>
  </div>
</div>
<hr>
<div class="row">
  <div class="col">
    <h1><%= @meta_ostruct.title %></h1>
  </div>
  <div class="col-1">
    <p class="text-end mt-2">
      <a href="<%= @current_path_memo %>/edit" class="btn btn-primary">edit</a>
    </p>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= @content %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col">
    <p>
      <strong>TAGS: </strong>
      <% unless @meta_ostruct.tags.empty? %>
        <span><%= @meta_ostruct.tags.split(',').join(', ') %></span>
      <% else %>
        NO TAGS
      <% end %>
    </p>
  </div>
  <div class="col">
    <% if @meta_ostruct.urls.any? %>
      <p>
        <strong>URLS:</strong>
      </p>
      <% @meta_ostruct.urls.each do |url| %>
        <p><a href="<%= url %>" target="_blank" rel="noopener noreferrer"><%= url %></a></p>
      <% end %>
    <% else %>
      NO URLS
    <% end %>
  </div>
</div>
