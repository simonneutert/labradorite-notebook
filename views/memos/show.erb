<div class="row">
  <div class="col">
    <a href="/memos" class="btn btn-primary">Overview</a>
  </div>
  <div class="col">
    <p class="text-end">
      <a href="<%= @current_path_memo %>/destroy" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
        DELETE
      </a>
    </p>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-12 col-md-10 order-5 order-sm-1">
    <h1><%= @meta_ostruct.title %></h1>
    <p>
      <strong>TAGS: </strong>
      <% unless @meta_ostruct.tags.empty? %>
        <span><%= @meta_ostruct.tags.split(',').join(', ') %></span>
      <% else %>
        NO TAGS
      <% end %>
    </p>
  </div>
  <div class="col-12 col-md-2 order-1 order-sm-2">
    <p class="text-end mt-2">
      <a href="<%= @current_path_memo %>/edit" class="btn btn-primary">edit</a>
    </p>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= @content %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-12 col-md-6">
    <% if @meta_ostruct.urls.any? %>
      <p>
        <strong>URLS:</strong>
      </p>
      <% @meta_ostruct.urls.each do |url| %>
        <p><a href="<%= url %>" target="_blank" rel="noopener noreferrer"><%= url %></a></p>
      <% end %>
    <% else %>
      NO URLS
    <% end %>
  </div>
  <div class="col-12 col-md-6">
    <p>
      <strong>Media: </strong>
    </p>
    <% @media_files.each do |m| %>
      <p>
        <a href="<%= m[1..-1] %>" target="_blank" rel="noopener noreferrer"><%= m[1..-1] %></a>
      </p>
    <% end %>
  </div>
</div>
